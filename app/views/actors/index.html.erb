<h1>List of Actor Profiles</h1>
<h2>Click on name to view Profile</h2>

<% if @actors.any? %>
  <ul>
  <% @actors.each do |actor| %>
  <li>
    <%= link_to actor.name, actor_path(actor) %>
  </li>
  <% end %>
  </ul>
<% else %>
  <!-- empty array, no people in the database -->

<% end %>

<h2><%= link_to 'Create Actor Profile', new_actor_path %></h2>
